<%- layout("layouts/boilerplate") %>

<div id="map" style="width: 100%; height: 500px"></div>

<h1>Campgrounds</h1>

<% campgrounds.forEach(campground => { %>
<!-- <li><a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a></li> -->
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (campground.images.length > 0) { %>
                <img src="<%= campground.images[0].url %>" class="img-fluid">
            <% } else { %>
                <!-- back up image as you can delete all lole -->
                <img src="https://res.cloudinary.com/dlri0ladq/image/upload/v1630032345/YelpCamp/2ee3b7c0b0d8f7be6c3397d068907d44_eczscu.jpg" class="img-fluid">     
            <% } %>
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-dark">View</a>
            </div>
        </div>
    </div>
</div>
<% }) %>

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
